<% @tweets.each do |e| %>
    <p>
        <%= e.message %>
        <%= (Time.current - e.tdate).to_i / 60 %>分前
        <%= link_to 'delete', tweet_path(e.id), method: :delete %>
        
        <% if session[:uid] %>
            <%= link_to 'いいね', likes_path(tweet_id: e.id), method: :post %>
            <%= link_to 'いいね解除', like_path(e), method: :delete %>
        <% end %>
    </p>
<% end %>

<% if session[:uid] %>
    <%= link_to '追加', new_tweet_path %>
<% else %>
    <%= link_to 'ログイン', top_main_path %>
<% end %>

